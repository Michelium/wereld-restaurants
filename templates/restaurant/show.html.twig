{% extends 'base.html.twig' %}

{% block title %}Restaurant{% endblock %}

{% block body %}
    <h1>Restaurant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ restaurant.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ restaurant.name }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ restaurant.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ restaurant.longitude }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ restaurant.street }}</td>
            </tr>
            <tr>
                <th>HouseNumber</th>
                <td>{{ restaurant.houseNumber }}</td>
            </tr>
            <tr>
                <th>PostalCode</th>
                <td>{{ restaurant.postalCode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ restaurant.city }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ restaurant.createdAt ? restaurant.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ restaurant.updatedAt ? restaurant.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>{{ restaurant.visible ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_restaurant_index') }}">back to list</a>

    <a href="{{ path('app_restaurant_edit', {'id': restaurant.id}) }}">edit</a>

    {{ include('restaurant/_delete_form.html.twig') }}
{% endblock %}
